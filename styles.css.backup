* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

body {
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
    background: linear-gradient(135deg, #1a1a1a 0%, #2d2d2d 100%);
    color: #e5e5e5;
    line-height: 1.6;
    min-height: 100vh;
}

/* Header Styles */
header {
    background-color: #1a1a1a;
    padding: 0;
    box-shadow: 0 2px 20px rgba(0,0,0,0.3);
    border-bottom: 1px solid #404040;
}

.navbar {
    display: flex;
    justify-content: space-between;
    align-items: center;
    max-width: 1200px;
    margin: 0 auto;
    padding: 1rem 2rem;
}

.logo {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: white;
}

.logo-icon {
    font-size: 2rem;
}

.logo-text {
    font-size: 1.2rem;
    font-weight: bold;
    display: flex;
    flex-direction: column;
    line-height: 1.2;
    text-decoration: none;
    color: white;
}

.logo-sub {
    font-size: 0.7rem;
    font-weight: normal;
    opacity: 0.8;
}

.nav-links {
    display: flex;
    align-items: center;
    gap: 2rem;
}

.nav-link {
    color: white;
    text-decoration: none;
    padding: 0.5rem 0;
    transition: color 0.3s ease;
}

.nav-link:hover {
    color: #ccc;
}

.join-btn {
    background-color: transparent;
    border: 2px solid white;
    color: white;
    padding: 0.5rem 1rem;
    border-radius: 5px;
    cursor: pointer;
    transition: all 0.3s ease;
}

.join-btn:hover {
    background-color: white;
    color: #1a1a1a;
}

.search-btn {
    background: none;
    border: none;
    color: white;
    font-size: 1.2rem;
    cursor: pointer;
    padding: 0.5rem;
}


/* Main Container - Single Column Layout */
.main-container {
    display: block;
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem;
    min-height: 100vh;
    box-sizing: border-box;
}

.content-wrapper {
    width: 100%;
    margin: 0 auto;
}

.main-title {
    text-align: center;
    font-size: 3rem;
    font-weight: bold;
    margin-bottom: 2rem;
    color: white;
    text-shadow: 0 0 20px rgba(59, 130, 246, 0.3);
}

/* Tab Container */
.tab-container {
    background: #242424;
    border-radius: 10px;
    box-shadow: 0 4px 30px rgba(0,0,0,0.4);
    border: 1px solid #404040;
    overflow: hidden;
}

.tab-buttons {
    display: flex;
    background-color: #1e1e1e;
    border-bottom: 1px solid #404040;
}

.tab-btn {
    flex: 1;
    padding: 1rem 1.5rem;
    border: none;
    background: transparent;
    cursor: pointer;
    font-size: 0.9rem;
    font-weight: 500;
    color: #a1a1a1;
    transition: all 0.3s ease;
    border-bottom: 3px solid transparent;
}

.tab-btn:hover {
    background-color: #2a2a2a;
    color: #60a5fa;
}

.tab-btn.active {
    color: #3b82f6;
    border-bottom-color: #3b82f6;
    background-color: #242424;
    box-shadow: 0 0 15px rgba(59, 130, 246, 0.2);
}

/* Content Container */
.content-container {
    padding: 2rem;
    background: #242424;
}

.input-section {
    margin-bottom: 2rem;
}

#prompt-input {
    width: 100%;
    padding: 1rem;
    border: 2px solid #404040;
    border-radius: 8px;
    font-size: 1rem;
    resize: vertical;
    margin-bottom: 1rem;
    font-family: inherit;
    transition: all 0.3s ease;
    background: #1e1e1e;
    color: #e5e5e5;
}

#prompt-input:focus {
    outline: none;
    border-color: #3b82f6;
    box-shadow: 0 0 15px rgba(59, 130, 246, 0.3);
}

.controls {
    display: flex;
    gap: 1rem;
    align-items: center;
    flex-wrap: wrap;
}

.dropdown {
    flex: 1;
    padding: 0.75rem;
    border: 2px solid #404040;
    border-radius: 8px;
    font-size: 1rem;
    background: #1e1e1e;
    color: #e5e5e5;
    cursor: pointer;
    min-width: 250px;
}

.dropdown:focus {
    outline: none;
    border-color: #3b82f6;
    box-shadow: 0 0 10px rgba(59, 130, 246, 0.3);
}

.generate-btn {
    background: linear-gradient(135deg, #3b82f6 0%, #1d4ed8 100%);
    color: white;
    border: none;
    padding: 0.75rem 2rem;
    border-radius: 8px;
    font-size: 1rem;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
    min-width: 120px;
    box-shadow: 0 4px 15px rgba(59, 130, 246, 0.3);
}

.generate-btn:hover {
    background: linear-gradient(135deg, #60a5fa 0%, #3b82f6 100%);
    transform: translateY(-2px);
    box-shadow: 0 6px 25px rgba(59, 130, 246, 0.4);
}

.generate-btn:disabled {
    background-color: #ccc;
    cursor: not-allowed;
    transform: none;
}

/* Suggestions Section */
.suggestions-section {
    background-color: #1e1e1e;
    border-radius: 8px;
    padding: 1.5rem;
    margin-bottom: 2rem;
    border: 1px solid #404040;
}

.suggestions-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1rem;
}

.suggestions-header h3 {
    color: #e5e5e5;
    font-size: 1.1rem;
    font-weight: 600;
}

.collapse-btn {
    background: none;
    border: none;
    font-size: 1.2rem;
    cursor: pointer;
    color: #a1a1a1;
    width: 30px;
    height: 30px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease;
}

.collapse-btn:hover {
    background-color: #404040;
    color: #60a5fa;
}

.suggestions-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
    gap: 0.75rem;
}

.suggestion-btn {
    background: #2a2a2a;
    border: 1px solid #404040;
    color: #e5e5e5;
    padding: 0.75rem;
    border-radius: 6px;
    cursor: pointer;
    font-size: 0.9rem;
    transition: all 0.3s ease;
}

.suggestion-btn:hover {
    border-color: #3b82f6;
    color: #60a5fa;
    transform: translateY(-1px);
    box-shadow: 0 4px 15px rgba(59, 130, 246, 0.2);
    background: #333333;
}

/* Output Section */
.output-section {
    background-color: #1e1e1e;
    border-radius: 8px;
    padding: 1.5rem;
    margin-top: 2rem;
    border: 1px solid #404040;
}

.output-section h3 {
    margin-bottom: 1rem;
    color: #e5e5e5;
    font-size: 1.1rem;
}

.output-content {
    background: #2a2a2a;
    border-radius: 6px;
    padding: 1rem;
    border: 1px solid #404040;
}

#generated-prompt {
    min-height: 100px;
    margin-bottom: 1rem;
    line-height: 1.6;
    white-space: pre-wrap;
    color: #e5e5e5;
}

.output-actions {
    display: flex;
    gap: 1rem;
    justify-content: flex-end;
}

.action-btn {
    background: #3b82f6;
    color: white;
    border: none;
    padding: 0.5rem 1rem;
    border-radius: 5px;
    cursor: pointer;
    font-size: 0.9rem;
    transition: all 0.3s ease;
    box-shadow: 0 2px 8px rgba(59, 130, 246, 0.3);
}

.action-btn:hover {
    background: #60a5fa;
    transform: translateY(-1px);
    box-shadow: 0 4px 15px rgba(59, 130, 246, 0.4);
}

/* Loading Section */
.loading-section {
    text-align: center;
    padding: 2rem;
    background-color: #1e1e1e;
    border-radius: 8px;
    margin-top: 2rem;
    border: 1px solid #404040;
    color: #e5e5e5;
}

.loading-spinner {
    width: 40px;
    height: 40px;
    border: 4px solid #404040;
    border-top: 4px solid #3b82f6;
    border-radius: 50%;
    animation: spin 1s linear infinite;
    margin: 0 auto 1rem;
    filter: drop-shadow(0 0 10px rgba(59, 130, 246, 0.5));
}

@keyframes spin {
    0% { transform: rotate(0deg); }
    100% { transform: rotate(360deg); }
}

/* Error Section */
.error-section {
    background-color: #2d1b1b;
    border: 1px solid #5c2a2a;
    color: #ff6b6b;
    padding: 1.5rem;
    border-radius: 8px;
    margin-top: 2rem;
    text-align: center;
}


/* Neon Glow Ad Template */
.ad-template-neon {
    background: linear-gradient(135deg, #1e1e1e 0%, #2d2d2d 100%);
    border: 2px solid #3b82f6;
    border-radius: 10px;
    box-shadow: 0 0 20px rgba(59, 130, 246, 0.3);
    color: #e5e5e5;
    padding: 15px;
    position: relative;
    overflow: hidden;
    transition: all 0.3s ease;
    max-width: 728px;
    width: 100%;
}

.ad-template-neon::before {
    content: '';
    position: absolute;
    top: -2px;
    left: -2px;
    right: -2px;
    bottom: -2px;
    background: linear-gradient(45deg, #3b82f6, #60a5fa, #3b82f6);
    border-radius: 10px;
    z-index: -1;
    animation: glow-pulse 2s ease-in-out infinite alternate;
}

@keyframes glow-pulse {
    0% { opacity: 0.5; }
    100% { opacity: 1; }
}

/* Minimalist Professional Ad Template */
.ad-template-minimal {
    background: #242424;
    border: 1px solid #404040;
    border-radius: 8px;
    color: #e5e5e5;
    padding: 20px;
    transition: all 0.3s ease;
    max-width: 728px;
    width: 100%;
}

.ad-template-minimal:hover {
    border-color: #3b82f6;
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.4);
}

/* Interactive Card Ad Template */
.ad-template-interactive {
    background: linear-gradient(135deg, #2a2a2a 0%, #1e1e1e 100%);
    border-radius: 12px;
    color: #e5e5e5;
    padding: 25px;
    cursor: pointer;
    position: relative;
    overflow: hidden;
    transition: all 0.3s ease;
    max-width: 728px;
    width: 100%;
}

.ad-template-interactive::after {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(59, 130, 246, 0.2), transparent);
    transition: left 0.5s;
}

.ad-template-interactive:hover::after {
    left: 100%;
}

/* Ad Content Layouts */
.ad-content-header {
    text-align: center;
}

.ad-content-header h4 {
    font-size: 1.2rem;
    margin-bottom: 0.5rem;
    color: #e5e5e5;
}

.ad-content-header p {
    font-size: 0.9rem;
    color: #a1a1a1;
    margin-bottom: 1rem;
}

.ad-content-inline {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 1rem;
}

.ad-content-inline .ad-text h4 {
    font-size: 1.1rem;
    margin-bottom: 0.3rem;
    color: #e5e5e5;
}

.ad-content-inline .ad-text p {
    font-size: 0.85rem;
    color: #a1a1a1;
}

.ad-content-vertical {
    text-align: center;
}

.ad-content-vertical .ad-icon {
    font-size: 2rem;
    margin-bottom: 0.5rem;
}

.ad-content-vertical h4 {
    font-size: 1rem;
    margin-bottom: 0.5rem;
    color: #e5e5e5;
}

.ad-content-vertical p {
    font-size: 0.8rem;
    color: #a1a1a1;
    margin-bottom: 1rem;
    line-height: 1.4;
}

.ad-content-footer {
    text-align: center;
}

.ad-content-footer h4 {
    font-size: 1.1rem;
    margin-bottom: 0.5rem;
    color: #e5e5e5;
}

.ad-content-footer p {
    font-size: 0.85rem;
    color: #a1a1a1;
    margin-bottom: 1rem;
}

/* Ad Buttons */
.ad-btn {
    background: linear-gradient(135deg, #3b82f6 0%, #1d4ed8 100%);
    color: white;
    border: none;
    padding: 0.6rem 1.2rem;
    border-radius: 6px;
    font-size: 0.9rem;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
    box-shadow: 0 4px 15px rgba(59, 130, 246, 0.3);
}

.ad-btn:hover {
    background: linear-gradient(135deg, #60a5fa 0%, #3b82f6 100%);
    transform: translateY(-2px);
    box-shadow: 0 6px 25px rgba(59, 130, 246, 0.4);
}

.ad-btn-small {
    background: #3b82f6;
    color: white;
    border: none;
    padding: 0.4rem 0.8rem;
    border-radius: 4px;
    font-size: 0.75rem;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
    width: 100%;
}

.ad-btn-small:hover {
    background: #60a5fa;
    transform: translateY(-1px);
}

/* Responsive Design */
@media (max-width: 1400px) {
    .main-container {
        grid-template-columns: 180px 1fr 180px;
        gap: 1rem;
    }
}

@media (max-width: 1200px) {
    .main-container {
        grid-template-columns: 160px 1fr 160px;
        gap: 0.5rem;
    }
}

@media (max-width: 768px) {
    .main-container {
        grid-template-columns: 1fr;
        gap: 2rem;
    }
    
    .content-wrapper {
        grid-column: 1;
    }
    
    .ad-sidebar {
        position: static;
        order: 3;
        background-color: transparent;
    }
    
    .ad-left {
        grid-column: 1;
        order: 2;
    }
    
    .ad-right {
        grid-column: 1;
        order: 4;
    }
    
    .ad-footer-grid {
        grid-template-columns: 1fr;
        gap: 1rem;
    }
}

@media (max-width: 768px) {
    .navbar {
        flex-direction: column;
        gap: 1rem;
        padding: 1rem;
    }

    .nav-links {
        flex-wrap: wrap;
        gap: 1rem;
    }

    .main-title {
        font-size: 2rem;
    }
    
    .main-container {
        padding: 1rem;
    }

    .tab-buttons {
        flex-direction: column;
    }

    .tab-btn {
        padding: 0.75rem;
        border-bottom: 1px solid #404040;
        border-right: none;
    }

    .tab-btn.active {
        border-bottom: 1px solid #404040;
        border-left: 3px solid #3b82f6;
    }

    .controls {
        flex-direction: column;
        align-items: stretch;
    }

    .dropdown {
        min-width: auto;
    }

    .suggestions-grid {
        grid-template-columns: 1fr;
    }

    .output-actions {
        flex-direction: column;
        align-items: stretch;
    }
    
    .ad-content-inline {
        flex-direction: column;
        text-align: center;
    }
    
    .ad-header,
    .ad-footer {
        padding: 1rem;
    }
    
    .ad-template-neon,
    .ad-template-minimal,
    .ad-template-interactive {
        padding: 15px;
    }
}

/* Templates Page Styles */
.templates-hero {
    text-align: center;
    padding: 3rem 2rem 2rem;
    max-width: 800px;
    margin: 0 auto;
}

.templates-hero h1 {
    font-size: 2.5rem;
    margin-bottom: 1rem;
    background: linear-gradient(135deg, #4A90E2, #67B8E3);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
}

.templates-hero p {
    font-size: 1.2rem;
    color: #a0a0a0;
    margin-bottom: 2rem;
}

.templates-search {
    max-width: 500px;
    margin: 0 auto;
    position: relative;
}

.templates-search input {
    width: 100%;
    padding: 1rem 1.5rem;
    background: #2d2d2d;
    border: 2px solid #404040;
    border-radius: 8px;
    color: #e5e5e5;
    font-size: 1rem;
    transition: all 0.3s ease;
}

.templates-search input:focus {
    outline: none;
    border-color: #4A90E2;
    box-shadow: 0 0 20px rgba(74, 144, 226, 0.2);
}

.templates-filters {
    display: flex;
    justify-content: center;
    gap: 1rem;
    margin: 2rem 0;
    flex-wrap: wrap;
    padding: 0 2rem;
}

.filter-btn {
    padding: 0.5rem 1rem;
    background: #2d2d2d;
    border: 1px solid #404040;
    border-radius: 6px;
    color: #a0a0a0;
    cursor: pointer;
    transition: all 0.3s ease;
    font-size: 0.9rem;
}

.filter-btn:hover {
    background: #404040;
    color: #e5e5e5;
    transform: translateY(-2px);
}

.filter-btn.active {
    background: #4A90E2;
    border-color: #4A90E2;
    color: white;
    transform: translateY(-2px);
}

/* Category sections for templates */
.template-category-section {
    margin: 2rem 0;
}

.category-title {
    font-size: 1.5rem;
    color: #e5e5e5;
    margin-bottom: 1rem;
    padding-bottom: 0.5rem;
    border-bottom: 2px solid #4A90E2;
}

.category-templates {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
}

.template-card {
    background: #2d2d2d;
    border: 1px solid #404040;
    border-radius: 12px;
    padding: 2rem;
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
}

.template-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 3px;
    background: linear-gradient(135deg, #4A90E2, #67B8E3);
}

.template-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 40px rgba(0,0,0,0.3);
    border-color: #4A90E2;
}

.template-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 1rem;
}

.template-header h3 {
    font-size: 1.3rem;
    color: #e5e5e5;
    margin: 0;
    flex: 1;
    margin-right: 1rem;
}

.template-category {
    background: #4A90E2;
    color: white;
    padding: 0.3rem 0.8rem;
    border-radius: 20px;
    font-size: 0.8rem;
    font-weight: 500;
    white-space: nowrap;
}

.template-description {
    color: #a0a0a0;
    margin-bottom: 1.5rem;
    line-height: 1.6;
}

.template-preview {
    background: #1a1a1a;
    border: 1px solid #404040;
    border-radius: 8px;
    padding: 1rem;
    margin-bottom: 1.5rem;
    cursor: pointer;
    transition: all 0.3s ease;
}

.template-preview:hover {
    background: #252525;
    border-color: #4A90E2;
}

.template-preview p {
    margin: 0;
    color: #b0b0b0;
    font-size: 0.9rem;
    line-height: 1.5;
}

.template-preview strong {
    color: #4A90E2;
}

.template-actions {
    display: flex;
    gap: 1rem;
    align-items: center;
}

.use-template-btn {
    flex: 1;
    padding: 0.8rem 1.5rem;
    background: linear-gradient(135deg, #4A90E2, #67B8E3);
    color: white;
    border: none;
    border-radius: 8px;
    font-weight: 500;
    cursor: pointer;
    transition: all 0.3s ease;
}

.use-template-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 5px 15px rgba(74, 144, 226, 0.4);
}

.copy-template-btn {
    padding: 0.8rem;
    background: #404040;
    color: #e5e5e5;
    border: none;
    border-radius: 8px;
    cursor: pointer;
    font-size: 1rem;
    transition: all 0.3s ease;
    min-width: 44px;
    display: flex;
    align-items: center;
    justify-content: center;
}

.copy-template-btn:hover {
    background: #4A90E2;
    transform: translateY(-2px);
}

/* For Startups Page Styles */
.breadcrumb {
    background: #1a1a1a;
    padding: 1rem 2rem;
    border-bottom: 1px solid #404040;
}

.breadcrumb-list {
    display: flex;
    list-style: none;
    gap: 0.5rem;
    max-width: 1200px;
    margin: 0 auto;
    color: #a1a1a1;
    font-size: 0.9rem;
}

.breadcrumb-list li:not(:last-child)::after {
    content: '>';
    margin-left: 0.5rem;
    color: #606060;
}

.breadcrumb-list a {
    color: #3b82f6;
    text-decoration: none;
}

.breadcrumb-list a:hover {
    color: #60a5fa;
}

.startup-hero {
    text-align: center;
    padding: 4rem 2rem;
    max-width: 900px;
    margin: 0 auto;
}

.startup-hero h1 {
    font-size: 3.5rem;
    font-weight: bold;
    margin-bottom: 1.5rem;
    background: linear-gradient(135deg, #3b82f6 0%, #60a5fa 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
}

.hero-subtitle {
    font-size: 1.3rem;
    color: #a1a1a1;
    margin-bottom: 2rem;
    line-height: 1.6;
}

.hero-stats {
    display: flex;
    justify-content: center;
    gap: 3rem;
    margin: 2rem 0;
}

.stat-item {
    text-align: center;
}

.stat-number {
    display: block;
    font-size: 2.5rem;
    font-weight: bold;
    color: #3b82f6;
}

.stat-label {
    font-size: 0.9rem;
    color: #a1a1a1;
}

.cta-primary {
