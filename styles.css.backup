/* Google AdSense Responsive Styles */
.adsbygoogle {
    display: block !important;
    text-align: center;
    margin: 1rem auto;
}

/* Footer Ad Units */
.footer-ad-unit {
    display: flex;
    justify-content: center;
    align-items: center;
    min-height: 280px;
    padding: 1rem;
}

.footer-ad-unit .adsbygoogle {
    max-width: 100%;
}

/* Header Ad Responsive */
.ad-header .adsbygoogle {
    max-width: 728px;
    width: 100%;
    height: auto;
    min-height: 90px;
}

/* Sidebar Ad Responsive */
.ad-sidebar .adsbygoogle {
    max-width: 300px;
    width: 100%;
    min-height: 250px;
    margin: 0 auto;
}

/* Inline Ad Responsive */
.ad-inline .adsbygoogle {
    max-width: 728px;
    width: 100%;
    margin: 2rem auto;
}

/* Mobile AdSense Styles */
@media (max-width: 768px) {
    .ad-header .adsbygoogle {
        max-width: 320px;
        min-height: 100px;
    }
    
    .ad-sidebar .adsbygoogle {
        max-width: 250px;
        min-height: 200px;
    }
    
    .ad-inline .adsbygoogle {
        max-width: 320px;
        min-height: 100px;
    }
    
    .footer-ad-unit {
        min-height: 200px;
    }
    
    .footer-ad-unit .adsbygoogle {
        max-width: 300px;
        min-height: 250px;
    }
}

/* Tablet AdSense Styles */
@media (min-width: 769px) and (max-width: 1024px) {
    .ad-header .adsbygoogle {
        max-width: 500px;
    }
    
    .ad-inline .adsbygoogle {
        max-width: 500px;
    }
}

/* AdSense Loading Placeholder */
.adsbygoogle[data-ad-status="unfilled"] {
    display: none !important;
}

/* Ensure ads don't break layout */
.ad-zone {
    overflow: hidden;
}

.ad-zone .adsbygoogle {
    max-width: 100%;
    box-sizing: border-box;
}